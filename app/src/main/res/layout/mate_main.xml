<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





    <Toolbar
        android:id="@+id/toolbar_mate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:navigationIcon="@drawable/ic_menu_black_24dp"
        android:title="@string/dog_mate"
        android:titleTextColor="@color/textColorPrimary"

        app:layout_constraintBottom_toTopOf="@+id/container"

        app:layout_constraintTop_toTopOf="parent"
        >


    </Toolbar>



    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toTopOf="@+id/toolbar_bottom_mate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_mate"
        app:layout_constraintVertical_chainStyle="spread"
        >


    </FrameLayout>


    <include
        android:id="@+id/toolbar_bottom_mate"
        layout="@layout/toolbar_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container"
         />


